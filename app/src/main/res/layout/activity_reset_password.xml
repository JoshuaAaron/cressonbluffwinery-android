<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ResetPasswordActivity">

    <RelativeLayout
        android:id="@+id/relative123"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:background="@color/colorPrimaryDark"
        android:layout_alignParentTop="true" >

        <TextView
            android:id="@+id/password_reset"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Password Reset"
            android:textStyle="bold"
            android:textColor="@android:color/white"
            android:textSize="20sp"
            android:textAlignment="center"
            android:layout_marginTop="10dp"
            android:inputType="number"
            />

    </RelativeLayout>

    <EditText
        android:id="@+id/find_phone_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/relative123"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Please enter account phone number"
        />

    <TextView
        android:id="@+id/title_questions"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/find_phone_number"
        android:text="Answer the Following Security Questions"
        android:gravity="center"
        android:textSize="20dp"
        android:layout_marginTop="35dp"

        />

    <EditText
        android:id="@+id/question_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/title_questions"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="In what city were you born?"
        />

    <EditText
        android:id="@+id/question_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/question_1"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="What is your mother's maiden name?"
        />

    <EditText
        android:id="@+id/question_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/input_design"
        android:layout_below="@id/question_2"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:hint="Who was your childhood best friend?"
        />

    <Button
        android:id="@+id/validate_btn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/buttons"
        android:textColor="@color/white"
        android:layout_below="@id/question_3"
        android:padding="14dp"
        android:layout_margin="15dp"
        android:text="submit answers"
        android:textStyle="bold"
        android:textSize="20dp"
        />

</RelativeLayout>